<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#E0FFFF"
    android:orientation="vertical"
    android:paddingLeft="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <Button
                android:id="@+id/bt_qd_answer_dianzan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/zan" />

            <TextView
                android:id="@+id/tv_qd_answer_dianzanshu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bt_qd_answer_dianzan"
                android:layout_marginRight="10dp"
                android:text="5555" />

            <TextView
                android:id="@+id/user_id_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/usermic" />

            <TextView
                android:id="@+id/tv_qd_answer_senperson1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#CD0000"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/user_id_img"
                android:text="zhangsan"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_qd_answer_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/tv_qd_answer_senperson1"
                android:layout_marginLeft="75dp"
                android:text="2010-1-1 10:23"
                android:textColor="#666666"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#575757">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_qd_answer_context"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:textColor="#3B3B3B"
            android:layout_height="55dp"
            android:text="你怎么那么笨啊,这么简单的问题都不会，自己先考虑，不会的但会百度,"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
